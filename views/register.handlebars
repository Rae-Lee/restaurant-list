<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body register">
      <h1 class="text-center mt-3">註冊</h1>
      {{> message}}
      <form action="/users/register" method="POST">
        <div class="mb-3">
          <label for="name" class="mb-2">姓名</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{name}}">
        </div>
        <div class="mb-3">
          <label for="email" class="mb-2">信箱</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{email}}">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" value="{{password
          }}">
        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="mb-2">確認密碼</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="Confirm Password">
        </div>
        <button type="submit" class="btn btn-major btn-block">註冊</button>
        <a href="/auth/facebook" class="btn btn-info btn-block facebook-login">Facebook 登入</a>
      </form>
      <p class="lead mt-4">
        已經有帳號? <a href="/users/login">登入</a>
      </p>
    </div>
  </div>
</div>