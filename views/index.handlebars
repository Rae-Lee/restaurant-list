<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group d-flex">
            <div class="flex-grow-1">
            <input type="text" name="keyword" class="form-control " placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
            </div>
            <div class="">
            <span class="input-group-text">地點</span>
            </div>
            <div class="flex-grow-2">
            <input type="text" name="location" class="form-control" placeholder="例如：台北市中山區" value="{{location}}"aria-label="Restaurant location...">
            </div>
         
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
{{!-- filter --}}
{{#if isSearched}}
<div class="filter">
  {{!-- 評分 --}}
  <div class="row">
  <form method="POST" class="dropdown col-5 rate" action="{{urlPathRate}}">
    <button class="btn {{#if isRate}}btn-major{{else}}btn-light{{/if}} dropdown-toggle btn-rank" type="button" id="dropdownMenuButton" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false">
      <i class="fa-solid fa-star"></i>評分
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <div class="dropdown-item">
      <input type="radio" id="checkbox1"name="rate" value="-1"><label for="checkbox1">評分高→低</label>
      </div>
      <div class="dropdown-item">
      <input type="radio"id="checkbox2"name="rate" value="1"><label for="checkbox2">評分低→高</label>
      </div>
      <div class="dropdown-item">
          <button type="submit" class="btn btn-major">儲存</button>
      </div>
    </div>

  </form>
</div>
<div class="filter row">
  {{!-- 價格 --}}
  <form class="dropdown col-6 price" method="POST" action="{{urlPathPrice}}">
    <button class="btn {{#if isPrice}}btn-major{{else}}btn-light{{/if}} dropdown-toggle btn-price" type="button" id="dropdownMenuButton" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false">
      <i class="fa-solid fa-money-check-dollar"></i>價格
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <div class="dropdown-item">
        <input type="radio"id="check1"name="price" value="$100以下"><label for="check1">$100以下</label>
      </div>
      <div class="dropdown-item">
        <input type="radio"id="check2"name="price" value="$100-$300"><label for="check2">$100-$300</label>
      </div>
      <div class="dropdown-item">
        <input type="radio"id="check3"name="price" value="$300-$1000"><label for="check3">$300-$1000</label>
      </div>
      <div class="dropdown-item">
        <input type="radio"id="check4"name="price" value="$1000以上"><label for="check4">$1000以上</label>
      </div>
      <div class="dropdown-item">
        <button type="submit" class="btn btn-major">儲存</button>
      </div>
    </div>
  </form>
</div>
</div>
{{/if}}
<!-- restaurant list -->

<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
        {{{notFoundMessage}}}
      <div class="card-columns">
        {{#each restaurants}}
        
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <a href="./restaurants/{{this._id}}" class="text-secondary">
                <h6 class="card-title mb-1">{{this.name}} </h6>
                <h6 class="card-title mb-1">{{this.name_en}}</h6>
              </a>
        
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
                <span>.{{this.price}}</span>
              </div>
        
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
              <div class="dropdown">
                <button class="btn  dropdown-toggle function" type="button" id="dropdownMenuButton" data-toggle="dropdown"
                  aria-haspopup="true" aria-expanded="false">
                  <i class="fa-light fa-grip-dots"></i>
                </button>
                <ul class="dropdown-menu"aria-labelledby="dropdownMenuButton">
                  <li><a class="dropdown-item " href="./restaurants/{{this._id}}/edit">編輯</a></li>
                  <li><a class="dropdown-item " href="./restaurants/{{this._id}}">詳細資訊</a></li>
                  <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
                  <li class="no-bullet">
                    <button type="submit"class="dropdown-item text-danger " >刪除</button>
                  </li>
                  </form>
                </ul>
              </div>
            </div>
          </div>
        
        {{/each}}
      </div>
    </div>
  </div>
</div>

<script>
 const menu = document.querySelector('.menu')
 const button = document.querySelectorAll('.menu__text') 
 menu.addEventListener('click', event => {
  for (let i = 0; i < button.length; i++) {
     if (button[i].classList.contains('line')) {
       button[i].classList.remove('line')
     }
   }
    event.target.classList.add('line')   
 })
</script>